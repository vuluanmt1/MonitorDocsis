<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="  Khách hàng"
                android:textColor="#FDFAFA"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="  Chi nhánh"
                android:textColor="#FDFAFA"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="  Số điện thoại"
                android:textColor="#FDFAFA"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="  Địa chỉ"
                android:textColor="#FDFAFA"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="  Loại hợp đồng"
                android:textColor="#FDFAFA"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="  Tình trạng"
                android:textColor="#FDFAFA"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="  Mã HĐ"
                android:textColor="#FDFAFA"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorDarkBlue"
                android:gravity="center|left"
                android:text="Tình trạng"
                android:visibility="invisible"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_tenkh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorLightGray"
                android:gravity="center|left"
                android:text=" Ping "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txt_chinhanh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorLightGray"
                android:gravity="center|left"
                android:text=" Ping "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txt_sodt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorLightGray"
                android:gravity="center|left"
                android:text=" Ping "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txt_diachi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorLightGray"
                android:gravity="center|left"
                android:text=" Ping "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txt_loai_hd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorLightGray"
                android:gravity="center|left"
                android:text=" Ping "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txt_tinhtrang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorLightGray"
                android:gravity="center|left"
                android:text=" Ping "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txt_mahd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorLightGray"
                android:gravity="center|left"
                android:text=" Ping "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>