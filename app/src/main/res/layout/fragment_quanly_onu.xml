<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_quanly_onu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progBar"
        style="@android:style/Widget.Material.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:indeterminateTint="#2264cf"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="@+id/scrollView"
        app:layout_constraintStart_toStartOf="@+id/scrollView"
        app:layout_constraintTop_toTopOf="@+id/scrollView"
        tools:targetApi="lollipop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/txt_search"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/btn_gpon"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                        app:srcCompat="@drawable/button_tim_onu" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_search"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_layout"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="Lỗi tín hiệu"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:text="Trạng thái (Active)"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="TR-069"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <Switch
                            android:id="@+id/swt_tinhieu"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:gravity="center|left"/>
                        <Switch
                            android:id="@+id/swt_status"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="" />
                        <Switch
                            android:id="@+id/swt_tr09"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/cb_khuvuc"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:spinnerMode="dropdown"
                            android:gravity="center|left"
                            android:background="@drawable/custom_spinner"/>
                        <EditText
                            android:id="@+id/edt_search_snonu"
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:hint="Nhập mã ONU"
                            android:background="@drawable/custom_editext" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/txt_search_onu"
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/btn_gpon"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:scaleType="fitCenter"
                            android:visibility="visible"
                            app:srcCompat="@drawable/button_timkiem" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_width="83dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorDarkBlue"
                            android:text=" Tool "
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_maolt"
                            android:layout_width="143dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorDarkBlue"
                            android:text="Mã OLT"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_maonu"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginLeft="3dp"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="Mã ONU"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="350dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="@color/colorDarkBlue"
                            android:gravity="center"
                            android:text="Địa chỉ"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="Status"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_rxpw"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="RxPw"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_firmware"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="@color/colorDarkBlue"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:text="Firmware"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_distance"
                            android:layout_width="115dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorDarkBlue"
                            android:text="Khoảng cách (m)"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorDarkBlue"
                            android:text="Time"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_portpon"
                            android:layout_marginLeft="3dp"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="Port"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_onuid"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="ONU ID"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_mode"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="Mode"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_profile"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="Profile"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_model"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorDarkBlue"
                            android:text="Model"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_deact"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorDarkBlue"
                            android:textColor="#FFFFFF"
                            android:text="Nguyên nhân"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_intime"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorDarkBlue"
                            android:text="Khoảng thời gian mất"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recView"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>
                </HorizontalScrollView>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:background="@color/colorLightGray"
                android:gravity="center"
                android:text="Số lượng :"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_total_onu"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:background="@color/colorLightGray"
                android:gravity="left"
                android:text=""
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>