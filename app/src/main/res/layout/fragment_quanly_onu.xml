<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_quanly_onu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progBar"
        style="@android:style/Widget.Material.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:indeterminateTint="#F39C2D"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="@+id/scrollView"
        app:layout_constraintStart_toStartOf="@+id/scrollView"
        app:layout_constraintTop_toTopOf="@+id/scrollView"
        tools:targetApi="lollipop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_search"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="Tìm Kiếm ONU"
                        android:gravity="center"
                        android:background="@drawable/custom_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/layout_search"
                    android:layout_width="470dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_layout"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="470dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="Lỗi tín hiệu"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:text="Trạng thái (Active)"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="TR-069"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="470dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <Switch
                            android:id="@+id/swt_tinhieu"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:gravity="center|left"/>
                        <Switch
                            android:id="@+id/swt_status"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="" />
                        <Switch
                            android:id="@+id/swt_tr09"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="470dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/cb_khuvuc"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:spinnerMode="dropdown"
                            android:gravity="center|left"
                            android:background="@drawable/custom_spinner"/>
                        <EditText
                            android:id="@+id/edt_search_snonu"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:hint="Nhập mã ONU"
                            android:background="@drawable/custom_editext" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_search"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:drawableLeft="@android:drawable/ic_menu_search"
                            android:layout_weight="1"
                            android:text="Search" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:background="@color/colorGray"
                            android:text=" Tool "
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_maolt"
                            android:layout_width="143dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:background="@color/colorGray"
                            android:text="Mã OLT"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_maonu"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginLeft="3dp"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="Mã ONU"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_portpon"
                            android:layout_marginLeft="3dp"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="Port"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_onuid"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="ONU ID"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="Status"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_mode"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="Mode"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_profile"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="Profile"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_firmware"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="@color/colorGray"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:text="Firmware"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_rxpw"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="RxPw"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_deact"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:background="@color/colorGray"
                            android:textColor="#000000"
                            android:text="Deactive Reason"
                            android:textSize="14dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_intime"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:background="@color/colorGray"
                            android:text="Inactive Time"
                            android:textSize="14dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_model"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:background="@color/colorGray"
                            android:text="Model"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_distance"
                            android:layout_width="115dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:background="@color/colorGray"
                            android:text="Khoảng cách (m)"
                            android:textSize="14dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:background="@color/colorGray"
                            android:text="Time"
                            android:textSize="14dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recView"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>
                </HorizontalScrollView>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>