<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">
            <LinearLayout android:orientation="horizontal"
                android:layout_height="55dp"
                android:gravity="center"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/txt_onu_serial"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@color/colorLightGray"
                    android:text="Serial"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:background="@color/colorLightGray"
                    android:textColor="#000000"
                    android:text="ONU InActive"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_rxpw"
                    android:layout_marginLeft="3dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@color/colorLightGray"
                    android:textColor="#000000"
                    android:text="RxPower"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_inact_time"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:background="@color/colorLightGray"
                    android:textColor="#000000"
                    android:text="Thời gian mất"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_deact"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:background="@color/colorLightGray"
                    android:textColor="#000000"
                    android:text="Nguyên nhân"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="450dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center|left"
                    android:background="@color/colorLightGray"
                    android:textColor="#000000"
                    android:text="Địa chỉ"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_status_subnum"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:background="@color/colorLightGray"
                    android:textColor="#000000"
                    android:text="Trạng thái HĐ"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@color/colorLightGray"
                    android:text="Time"
                    android:textSize="12sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>
</LinearLayout>